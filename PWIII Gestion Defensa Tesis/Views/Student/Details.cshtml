@model PWIII_Gestion_Defensa_Tesis.Models.Student

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <dl class="row">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>
        <dt>Second Last Name</dt>
        <dd>@Model.SecondLastName</dd>
        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>
</div>

<h3>Defense Activities</h3>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.DefenseActivities)
        {
            <tr>
                <td>@activity.Description</td>
                <td>@activity.DefenseDate</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
