@model PWIII_Gestion_Defensa_Tesis.Models.Thesis

<h1>Create Thesis</h1>
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTypeThesis"></label>
        <select asp-for="IdTypeThesis" class="form-control" asp-items="ViewBag.IdTypeThesis"></select>
    </div>

    <input type="hidden" asp-for="Note" value="0.00" />

    <div class="form-group">
        <label asp-for="UploadFile"></label>
        <input type="file" name="uploadFile" class="form-control" />
        <span asp-validation-for="UploadFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
