@model PWIII_Gestion_Defensa_Tesis.Models.Thesis

<h1>Edit Thesis</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTypeThesis"></label>
        <select asp-for="IdTypeThesis" class="form-control" asp-items="ViewBag.IdTypeThesis"></select>
    </div>
    <input type="hidden" asp-for="Note" value="0.00" />


    <div class="form-group">
        <label asp-for="UploadFile"></label>
        <input type="file" name="uploadFile" class="form-control" />
        <span asp-validation-for="UploadFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current File:</label>
        @if (!string.IsNullOrEmpty(Model.FilePath) && Model.FilePath != "Sin Thesis")
        {
            <a href="@Url.Content(Model.FilePath)" target="_blank" class="btn btn-info">Download Current File</a>
        }
        else
        {
            <span>No file uploaded yet.</span>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
