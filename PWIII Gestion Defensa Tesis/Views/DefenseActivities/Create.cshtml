@model PWIII_Gestion_Defensa_Tesis.Models.DefenseActivity

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6 col-md-12 mb-4">
            <h4>Create Activity</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DefenseDate" class="control-label"></label>
                    <input asp-for="DefenseDate" class="form-control" />
                    <span asp-validation-for="DefenseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdThesis" class="control-label"></label>
                    <select asp-for="IdThesis" class="form-control" asp-items="ViewBag.IdThesis"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdAudience" class="control-label"></label>
                    <select asp-for="IdAudience" class="form-control" asp-items="ViewBag.IdAudience"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdStudent" class="control-label"></label>
                    <select asp-for="IdStudent" class="form-control" asp-items="ViewBag.IdStudent"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StatusThesis" class="control-label"></label>
                    <input asp-for="StatusThesis" class="form-control" value="Pendiente" readonly/>
                    <span asp-validation-for="StatusThesis" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


