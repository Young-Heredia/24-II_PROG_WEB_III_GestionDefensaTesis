@model IEnumerable<PWIII_Gestion_Defensa_Tesis.Models.Professional>

<h1>Professionals</h1>

<!-- Botón para crear un nuevo profesional -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Professional</a>
</p>

<!-- Filtro de Activos/Inactivos -->
<form method="get" class="mb-4" id="filterForm">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="filter" id="active" value="active"
        @(ViewBag.Filter == "active" ? "checked" : "") onchange="document.getElementById('filterForm').submit();" />
        <label class="form-check-label" for="active">Mostrar Activos</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="filter" id="inactive" value="inactive"
        @(ViewBag.Filter == "inactive" ? "checked" : "") onchange="document.getElementById('filterForm').submit();" />
        <label class="form-check-label" for="inactive">Mostrar Inactivos</label>
    </div>
</form>

<!-- Tabla de Datos -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Career)</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Career)</td>
                <td>@(item.Status == 1 ? "Active" : "Inactive")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
